{
  "compilerOptions": {
    "target": "es2018",
    "module": "esnext",
    "moduleResolution": "node",
    "lib": ["es2018", "DOM"],

    "rootDir": "src",
    "outDir": "dist",

    "strict": true,
    "alwaysStrict": true,
    "strictFunctionTypes": true,
    "strictNullChecks": true,
    "strictPropertyInitialization": true,
    "esModuleInterop": true,

    "forceConsistentCasingInFileNames": true,
    "noImplicitAny": true,
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "noFallthroughCasesInSwitch": true,

    "declaration": true,

    "pretty": true,
    "paths": {
      "trimerge-sync-indexed-db": [
        "packages/trimerge-sync-indexed-db/src/index.ts"
      ],
      "trimerge-sync-basic-client": [
        "packages/trimerge-sync-basic-client/src/index.ts"
      ],
      "trimerge-sync-hash": ["packages/trimerge-sync-hash/src/index.ts"],
      "trimerge-sync": ["packages/trimerge-sync/src/index.ts"]
    }
  },
  "include": ["src"]
}
